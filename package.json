{
  "name": "@jakoboo/watchtower",
  "version": "0.0.0-alpha.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "A graceful shutdown library.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakoboo/watchtower.git"
  },
  "author": "Jakub Babelek <jbbabelek@gmail.com>",
  "homepage": "https://github.com/jakoboo/watchtower#readme",
  "bugs": "https://github.com/jakoboo/watchtower/issues",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/es/index.js",
    "default": "./dist/cjs/index.js"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "build": "rimraf ./dist ./types && rollup -c",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "!dist/**/*.map",
    "types",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "graceful",
    "shutown",
    "typescript"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitlint": "^18.6.0",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.10.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "src/*.{js,ts}": [
      "eslint"
    ]
  }
}
